<!--顶部-->
<header class="header">
      <a href="javascript:;" class="back"></a>
      <h2>登录</h2>
      <a href="javascript:;" class="rightlink">注册</a>
</header>

<!--中间-->
<div class="login_tab">
    <span class="login_tab_pwd active">密码登录</span>
    <span class="login_tab_sms">验证码登录</span>
</div>

<!--中间-->
<section class="login_main">
        <!--错误信息提示-->
        <div class="item item_tips">
            <div class="err_msg">用户名不存在</div>
        </div> 
        <!--登录表单-->
        <form action="" method="post">
            <div class="item item_username">
            	  <i class="icon_tel"></i>
                <input class="txt_input txt_username" type="number" pattern="\d*" placeholder="输入手机号码" >
            </div>
            
            <div class="item item_password">
            	  <i class="icon_pwd"></i>
                <input class="txt_input txt_password" type="password" autocomplete="off" placeholder="输入密码">
                <b class="tp_btn btn_off"></b>
            </div>
              
            <div class="item item_tab item_sms_captcha">
                 <i class="icon_sms"></i>
                 <input class="txt_input txt_sms_captcha" type="tel" autocomplete="off" placeholder="输入验证码">
                 <a href="javascript:;" class="btn_retransmit">获取验证码</a>
            </div>

            <div class="item item_login_btn item_btns">
              <a class="btn_login btn_disabled" href="javascript:;">登录</a>
            </div>

            <div class="item item_login_option">
              <span class="retrieve_password">
                  <a href="forgetpassword.html">忘记密码？</a>
              </span>
            </div>
            
        </form>
</section>
<!--/中间-->